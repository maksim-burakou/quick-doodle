{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Quick Doodle",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "maximized": true,
        "focus": true,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "closable": false,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/tray/tray_icon--active.svg",
      "icons/tray/tray_icon--inactive.svg"
    ]
  }
}
